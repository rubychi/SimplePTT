<% if current_user %>
  <%= simple_form_for :comment, url: "/groups/#{groupId}/posts/#{postId}/comments", method: "post" do |f| %>
    <div class="input-group mt-25">
      <div class="input-group-prepend">
        <div class="input-group-text">
          <%= f.hidden_field :like, id: "thumbs-up-checkbox" %>
          <i id="thumbs-up-btn" class="far fa-thumbs-up pointer" role="button"></i>
          <%= f.hidden_field :dislike, id: "thumbs-down-checkbox" %>
          <i id="thumbs-down-btn" class="far fa-thumbs-down pointer ml-10" role="button"></i>
        </div>
      </div>
      <%= f.input :content, { label: false, wrapper: false, placeholder: 'Comment', class: "form-control", } %>
      <div class="input-group-append">
        <%= f.submit "Submit", class: "btn btn-outline-secondary", disabled: false %>
      </div>
    </div>
  <% end %>
<% end %>