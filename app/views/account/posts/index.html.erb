<h2>My Posts</h2>
<br />
<table class="table">
  <thead>
    <tr>
      <td>#</td>
      <td>Post</td>
      <td>Content</td>
      <td>Board</td>
      <td>Posted Time</td>
      <td />
    </tr>
  </thead>
  <tbody>
    <% @posts.each_with_index do |post, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= link_to(post.title, group_post_path(post.group, post)) %></td>
        <td><%= render_post_content(post) %></td>
        <td><%= post.group.title %></td>
        <td><%= post.created_at.localtime.to_formatted_s(:db) %></td>
        <td>
          <%= link_to('Edit', edit_group_post_path(post.group, post), class: "btn btn-light btn-sm") %>
          <%= link_to('Delete', group_post_path(post.group, post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-light btn-sm") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>